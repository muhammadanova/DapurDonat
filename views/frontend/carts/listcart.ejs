<%- include('../layouts/headers', { page : 'listcart' }) %>
<section class="hero-wrap hero-wrap-2" style="background-image: url('/frontassets/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
  <div class="overlay"></div>
  <div class="container">
    <div class="row no-gutters slider-text align-items-end justify-content-center">
      <div class="col-md-9 ftco-animate text-center mb-4">
        <h1 class="mb-2 bread">KERANJANG LIST</h1>
      </div>
    </div>
  </div>
</section>

<section class="ftco-section">
  <div class="container">
    <div class="ftco-search">
      <div class="row">
        <div class="col-md-12">
          <table class="table table-bordered text-center">
            <thead>
              <tr>
                <th width="5%">No</th>
                <th width="25%">Nama Donat</th>
                <th width="25%">Price Per Pcs</th>
                <th width="25%">Quantity</th>
                <th width="15%">Action</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>1</td>
                <td>Donat Chocolate</td>
                <td>Rp. 15.000</td>
                <td>
                  <div class="input-group width50">
                    <div class="input-group-prepend">
                      <a href="/minusQuantity" class="btn btn-dark btn-minus"><i class="fa fa-minus"></i></a>
                    </div>
                    <input type="number" id="qty_input" class="form-control form-control-sm pl-20 text-center" value="1" min="1">
                    <div class="input-group-prepend">
                      <a href="/plusQuantity" class="btn btn-dark btn-plus"><i class="fa fa-plus"></i></a>
                    </div>
                  </div>
                </td>
                <td>
                  <a href="/delete/cart" class="btn btn-danger"><i class="fa fa-trash"></i>&nbsp;Delete</a>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<script type="text/javascript">
$(document).ready(function(){
  $('#qty_input').prop('disabled', true);
  $('#plus-btn').click(function(){
    $('#qty_input').val(parseInt($('#qty_input').val()) + 1 );
  });
  $('#minus-btn').click(function(){
    $('#qty_input').val(parseInt($('#qty_input').val()) - 1 );
    if ($('#qty_input').val() == 0) {
      $('#qty_input').val(1);
    }
  });
});
</script>
